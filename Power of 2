class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n){
        
        while(n!=1 and n!=0){
            if(n%2==0){
                n/=2;
            }else{
                return false;
            }
        }
        if(n==1){
            return true;
        }
        return false;
    }
};
